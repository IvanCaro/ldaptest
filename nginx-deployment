apiVersion: apps/v1beta1 # for versions before 1.7.0 use apps/v1beta1
kind: Deployment
metadata:
  name: nginx-pssim
  labels:
    app: nginx-pssim
spec:
  replicas: 1
  selector:
    matchLabels:
      app: nginx-pssim
  template:
    metadata:
      labels:
        app: nginx-pssim
    spec:
      hostAliases:
      - ip: "127.0.0.1"
        hostnames:
        - "foo.local"
        - "bar.local"
      - ip: "10.1.2.3"
        hostnames:
        - "foo.remote"
        - "bar.remote"
      containers:
      - name: nginx-pssim
        image: nginx
        command:
          - cat
        args:
          - "/etc/hosts"
        ports:
        - containerPort: 80
      nodeSelector:
        beta.kubernetes.io/os: linux
